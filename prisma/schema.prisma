generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id                String   @id @default(uuid())
  bio               String?
  profilePicture    String?
  userId            String     @unique
  user              User     @relation(fields: [userId], references: [id])
  createdAt         DateTime @default(now())
  followers         User[]  @relation("followers")
  following         User[]  @relation("following")
}

model User {
  id             String     @id @default(uuid())
  name           String?
  email          String
  password       String
  posts          Post[]
  comments       Comment[]
  profile        Profile?
  userId         String     @unique
  userFollowers  Profile       @relation("followers", fields:[userId], references:[id])
  userFollwing   Profile       @relation("following", fields:[userId], references:[id])
  createdAt      DateTime   @default(now())
}

model Post {
  id        String    @id @default(uuid())
  caption   String
  picture   String?
  comments  Comment[]
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
